<div class="row">
  <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>Dados do Perfil</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">        
        <% if @user.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end  %>
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
        <%= form_with(url: users_backoffice_profile_path, model: @user, local: true) do |form| %>
          <%= form.fields_for :user_profile do |profile_form|%>
            <div class="item form-group">
              <%= profile_form.label :firstname, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6">
                <%= profile_form.text_field :firstname, class:"form-control" %>
              </div>
            </div>
            <div class="item form-group">
              <%= profile_form.label :lastname, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6">
                <%= profile_form.text_field :lastname, class:"form-control" %>
              </div>
            </div>

            <div class="item form-group">
              <%= profile_form.label :zip_code, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6">
                <div class="input-group">
                  <%= profile_form.text_field :zip_code, class:"form-control" %>
                  <span class="input-group-btn">
                    <%= link_to 'Buscar', users_backoffice_zip_code_path, remote:true, class:"btn btn-primary", id:"zip_code_link" %>
                  </span>
                </div>
              </div>
            </div>

            <script>
              const zipCodeInput = document.getElementById("user_user_profile_attributes_zip_code");
              const zipCodeLink = document.getElementById("zip_code_link");
              console.log('zipCodeInput', zipCodeInput.value);
              zipCodeInput.addEventListener('change', function(){
                zipCodeLink.href = '<%= users_backoffice_zip_code_path %>/?zip_code='+zipCodeInput.value;
              })
            </script>

            <div class="item form-group">
              <%= profile_form.label :address, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6">
                <%= profile_form.text_field :address, class:"form-control" %>
              </div>
            </div>
            <div class="item form-group">
              <%= profile_form.label :gender, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <div id="gender" class="btn-group" data-toggle="buttons">
                  <label class="btn btn-secondary" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                    <%= profile_form.radio_button :gender, "M", class:"join-btn", "data-parsley-multiple":"gender" %> &nbsp; Masculino &nbsp; 
                  </label>
                  <label class="btn btn-primary" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                    <%= profile_form.radio_button :gender, "F", class:"join-btn", "data-parsley-multiple":"gender" %> &nbsp; Feminino &nbsp;
                  </label>
                </div>
              </div>
            </div>
            <div class="item form-group">
              <%= profile_form.label :birthdate, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6">
                <%= profile_form.date_field :birthdate, class:"form-control" %>
              </div>
            </div>
          <% end %>
          <div class="item form-group">
            <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6">
              <%= form.text_field :email, class:"form-control", readonly: true %>
            </div>
          </div>
          <div class="item form-group">
            <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6">
              <%= form.password_field :password, class:"form-control" %>
            </div>
          </div>
          <div class="item form-group">
            <%= form.label :password_confirmation, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6">
              <%= form.password_field :password_confirmation, class:"form-control" %>
            </div>
          </div>
  
          <div class="ln_solid"></div>
          <div class="item form-group">
            <div class="col-md-6 col-sm-6 offset-md-3">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>