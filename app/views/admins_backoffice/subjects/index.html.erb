<div style="padding: 15px 0px">
  <h1>
    Listagem de Assuntos
    <span>
      <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-sm" do %>
          Adicionar
          <i class="fas fa-plus"></i>
      <% end %>
    </span>
  </h1>
</div>

<div class="table-responsive">
   <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
      <div class="row">
         <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
               <thead>
                  <tr role="row">
                     <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1" style="width: 100px;">#</th>
                     <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 350px;">
                        <%= @subjects.model.human_attribute_name(:description) %>
                     </th>
                     <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 50px;">
                        <%= link_to admins_backoffice_subjects_path(format: :pdf), class:"btn btn-danger btn-circle" do %>
                           <i class="fas fa-file-pdf"></i>
                        <% end %>
                     </th>
                  </tr>
               </thead>
               <tbody>
                  <% @subjects.each do |subject| %>
                    <tr role="row" class="odd">
                      <td class="sorting_1">
                        <%= subject.id %>
                      </td>
                      <td>
                        <%= subject.description %>
                      </td>
                      <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-info btn-circle" do %>
                           <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja excluir o assunto selecionado?" } do %>
                           <i class="fas fa-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end  %>
               </tbody>
            </table>
            <%= paginate @subjects %>
         </div>
      </div>
   </div>
</div>